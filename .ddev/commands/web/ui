#!/bin/bash

## Description: Drupal Canvas: Run UI app's dev server, optionally building the UI code first.
## Usage: ui [--build|-b]
## Example: "ddev ui" or "ddev ui --build" or "ddev ui -b"
## ExecRaw: true

# Parse command line arguments
BUILD_FLAG=false
while [[ $# -gt 0 ]]; do
    case $1 in
        --build|-b)
            BUILD_FLAG=true
            shift
            ;;
        *)
            echo "Unknown option: $1"
            echo "Usage: ui [--build|-b]"
            exit 1
            ;;
    esac
done

cd "$DDEV_COMPOSER_ROOT/web/modules/contrib/canvas/ui" || exit

if [ "$BUILD_FLAG" = true ]; then
    npm run build \
        --prefix "$DDEV_COMPOSER_ROOT/web/modules/contrib/canvas/ui" \
        || exit 1
fi

npm run drupaldev \
    --prefix "$DDEV_COMPOSER_ROOT/web/modules/contrib/canvas/ui" \
    -- --host
    || exit 1
